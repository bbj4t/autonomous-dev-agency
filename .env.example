# Autonomous Dev Agency Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# AI Server (primary inference + orchestration)
AI_SERVER_IP=192.168.86.56
AI_SERVER_HOSTNAME=ai

# Windows Workstation (development + fast inference)
WINDOWS_IP=192.168.86.38
WINDOWS_HOSTNAME=DESKTOP-LIBOQV5

# East Server (supporting services)
EAST_SERVER_IP=192.168.86.51
EAST_SERVER_HOSTNAME=linux-home

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (agent memory, chat history)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_memory
POSTGRES_USER=agent
POSTGRES_PASSWORD=changeme-use-strong-password

# ChromaDB (vector memory)
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Redis (message queue - runs on East server)
REDIS_HOST=192.168.86.51
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Ollama (AI Server - CPU inference)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_DEFAULT=qwen2.5:3b
OLLAMA_MODEL_COMPLEX=qwen2.5:7b
OLLAMA_MODEL_EMBEDDINGS=nomic-embed-text

# llama.cpp (Windows - GPU inference via Vulkan)
LLAMACPP_HOST=http://192.168.86.38:8080
LLAMACPP_MODEL=qwen2.5-1.5b-instruct-q4_k_m.gguf

# Claude API (optional - for complex reasoning tasks)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514

# =============================================================================
# VOICE PIPELINE CONFIGURATION
# =============================================================================

# Faster-Whisper STT
STT_URL=http://localhost:8000
WHISPER_MODEL=tiny.en
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Kokoro TTS
TTS_URL=http://localhost:8880
TTS_VOICE=af_bella
TTS_SPEED=1.0

# Voice Assistant
VOICE_ASSISTANT_PORT=7860
VOICE_VAD_THRESHOLD=0.5
VOICE_SILENCE_DURATION=1.0

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Autonomy thresholds (0.0 - 1.0)
AUTONOMY_LOW_RISK_THRESHOLD=0.65
AUTONOMY_MEDIUM_RISK_THRESHOLD=0.80
AUTONOMY_HIGH_RISK_THRESHOLD=0.95

# Token budgets
MAX_TOKENS_PER_TASK=50000
MAX_TOKENS_PER_AGENT=100000
MAX_TOKENS_PER_SESSION=500000

# Timeouts (seconds)
TASK_TIMEOUT_DEFAULT=300
TASK_TIMEOUT_RESEARCH=600
ESCALATION_TIMEOUT=60

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FORMAT=json

# Netdata (East server)
NETDATA_URL=http://192.168.86.51:19999

# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=60

# =============================================================================
# SECURITY
# =============================================================================

# API Keys for external services (if needed)
# OPENAI_API_KEY=
# GITHUB_TOKEN=

# JWT Secret for internal auth (generate with: openssl rand -hex 32)
JWT_SECRET=generate-a-secure-random-string-here

# Allowed origins for CORS
CORS_ORIGINS=http://localhost:7860,http://192.168.86.38,http://192.168.86.56
